<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>


    <logger name="com.researchworx.cresco.controller.regionalcontroller.ControllerDB" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.researchworx.cresco.controller.regionalcontroller.GlobalControllerChannel" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
