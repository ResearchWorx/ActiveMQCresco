        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.researchworx.cresco.controller.communication.ActiveBroker" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.researchworx.cresco.controller.communication.ActiveProducer" level="trace" additivity="false">
        <appender-ref ref="STDOUT" />
